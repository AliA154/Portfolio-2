import java.util.*;

public class StringLoops2 {
  public static void main (String[] args) {
    //Declarations 
    Scanner input = new Scanner(System.in);
    String name;
    int len;
    
    
    System.out.print("Please enter your name: ");
    name = input.nextLine();
    len = name.length();
    
    System.out.print("Name written backwards: ");
    for (int i = 3;i >= 0; i--) {
      System.out.print(i)
    }//end for loop backwards
    System.out.println();
    
    
  
     
     
     
     
     
     
     
     
     
     
     
     input.close();  
  }//end main
}//end class